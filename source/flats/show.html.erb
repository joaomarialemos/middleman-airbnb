<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->


<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/<%= flat.city_slug %>');">
</div>


<div class="container">
  <div class="row">
    <div class="ol-xs-12 col-sm-6 col-md-4">
      <div class="hear">
        <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "img-circle" %>
        <p><%= flat.name %></p>
        <h1><%= flat.description %></h1>
        <p><%= flat.city_name %></p>
        <p><%= flat.rating %></p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="ol-xs-12 col-sm-6 col-md-4">
      <div class="form-ino">
        <form class="form-inline">
          <div class="form-group">
            <input type="text" id="Location" class="form-control" placeholder="Where?">
          </div>
          <div class="form-group">
            <input type="text" id="Date" class="form-control" placeholder="When?">
          </div>
          <div class="form-group">
            <select id="guests" name=" " class="form-control input-md">
              <option value="guest1">1 guest</option>
              <option value="guest2">2 guest</option>
              <option value="guest3">3 guest</option>
            </select>
          </div>
          <button type="button" class="btn btn-primary">Search</button>
        </form>
      </div>
    </div>
  </div>
</div>
